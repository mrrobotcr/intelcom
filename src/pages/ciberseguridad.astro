---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import CyberHero from '../components/cyber/CyberHero.astro';
import ThreatKillChain from '../components/cyber/ThreatKillChain.astro';
import BusinessApproach from '../components/cyber/BusinessApproach.astro';
import TransformationTimeline from '../components/cyber/TransformationTimeline.astro';
import CyberServices from '../components/cyber/CyberServices.astro';
import Methodology from '../components/cyber/Methodology.astro';
import CyberContact from '../components/cyber/CyberContact.astro';

// Page-specific SEO metadata
const seo = {
	title: 'Ciberseguridad y Hacking Ético | Servicios MDR & Pentesting | Intelcom',
	description: 'Proteja su empresa con servicios avanzados de ciberseguridad: Pentesting, MDR (Detección y Respuesta Gestionada), DevSecOps y análisis de vulnerabilidades. Expertos en seguridad Microsoft.',
	image: '/images/og-ciberseguridad.svg',
	type: 'website' as const
};
---

<Layout
	title={seo.title}
	description={seo.description}
	image={seo.image}
	type={seo.type}
>
	<CyberHero />
	<ThreatKillChain />
	<BusinessApproach />
	<TransformationTimeline />
	<CyberServices />
	<Methodology />
	<CyberContact />
	<Footer />
</Layout>
