---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import CyberHero from '../components/cyber/CyberHero.astro';
import ThreatKillChain from '../components/cyber/ThreatKillChain.astro';
import BusinessApproach from '../components/cyber/BusinessApproach.astro';
import TransformationTimeline from '../components/cyber/TransformationTimeline.astro';
import CyberServices from '../components/cyber/CyberServices.astro';
import Methodology from '../components/cyber/Methodology.astro';
import CyberContact from '../components/cyber/CyberContact.astro';

// Page-specific SEO metadata
const seo = {
	title: 'Ciberseguridad en Costa Rica | Intelcom - Protección Proactiva para su Negocio',
	description: 'Servicios profesionales de ciberseguridad en Costa Rica. Protección avanzada contra amenazas, detección de intrusiones, respuesta a incidentes y cumplimiento de normativas. Microsoft Solutions Partner.',
	image: '/images/og-ciberseguridad.jpg',
	type: 'website' as const
};
---

<Layout
	title={seo.title}
	description={seo.description}
	image={seo.image}
	type={seo.type}
>
	<CyberHero />
	<ThreatKillChain />
	<BusinessApproach />
	<TransformationTimeline />
	<CyberServices />
	<Methodology />
	<CyberContact />
	<Footer />
</Layout>
