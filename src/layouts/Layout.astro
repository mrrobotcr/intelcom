---
import Header from '../components/Header.astro';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	noindex?: boolean;
	nofollow?: boolean;
	type?: 'website' | 'article';
	publishedTime?: string;
	modifiedTime?: string;
	section?: string;
	tags?: string[];
}

const {
	title = 'Intelcom - Consultoría Microsoft Azure & Office 365 en Costa Rica',
	description = 'Somos Microsoft Solutions Partner certificado en Costa Rica. Especialistas en migración Azure, Office 365, Dynamics 365, ciberseguridad e infraestructura en la nube. Consultoría especializada disponible.',
	image = '/images/og-image.jpg',
	canonical = new URL(Astro.url.pathname, Astro.site ?? 'https://intelcomint.com').href,
	noindex = false,
	nofollow = false,
	type = 'website'
} = Astro.props;

const fullImageUrl = new URL(image, Astro.site ?? 'https://intelcomint.com').href;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content="Microsoft Azure Costa Rica, Office 365 Costa Rica, Dynamics 365, consultoría Microsoft, migración nube, ciberseguridad, infraestructura cloud, Microsoft Solutions Partner" />
		<meta name="author" content="Intelcom" />
		<meta name="robots" content={noindex ? 'noindex' : 'index' + (nofollow ? ', nofollow' : ', follow')} />
		<link rel="canonical" href={canonical} />

		<!-- Sitemap Discovery -->
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImageUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content={title} />
		<meta property="og:site_name" content="Intelcom" />
		<meta property="og:locale" content="es_CR" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonical} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={fullImageUrl} />
		<meta property="twitter:image:alt" content={title} />

		<!-- Additional SEO Meta Tags -->
		<meta name="theme-color" content="#0A0A0A" />
		<meta name="msapplication-TileColor" content="#DC2626" />
		<meta name="format-detection" content="telephone=no" />

		<!-- Geo/Location Meta Tags -->
		<meta name="geo.region" content="CR" />
		<meta name="geo.placename" content="Alajuela" />
		<meta name="ICBM" content="10.0159;-84.2156" />

		<!-- Schema.org Structured Data - Organization -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"@id": "https://intelcomint.com/#organization",
			"name": "Intelcom",
			"url": "https://intelcomint.com",
			"logo": "https://intelcomint.com/images/logo.png",
			"description": "Microsoft Solutions Partner certificado en Costa Rica, especialistas en Azure, Office 365, Dynamics 365 y ciberseguridad.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Centro Empresarial",
				"addressLocality": "Alajuela",
				"addressRegion": "Alajuela",
				"addressCountry": "CR"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+506-2200-0000",
				"contactType": "customer service",
				"email": "info@intelcomint.com",
				"availableLanguage": ["Spanish", "English"],
				"areaServed": "CR",
				"contactOption": "TollFree"
			},
			"sameAs": [
				"https://www.linkedin.com/company/intelcom",
				"https://twitter.com/intelcom"
			],
			"areaServed": {
				"@type": "Country",
				"name": "Costa Rica"
			},
			"serviceType": ["IT Consulting", "Cloud Services", "Cybersecurity"],
			"expertise": ["Microsoft Azure", "Office 365", "Dynamics 365", "Cloud Migration", "Cybersecurity"],
			"founder": "Intelcom",
			"foundingDate": "2000",
			"numberOfEmployees": {
				"@type": "QuantitativeValue",
				"minValue": 10,
				"maxValue": 50
			}
		}
		</script>

		<!-- Schema.org Structured Data - LocalBusiness -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "ITService",
			"@id": "https://intelcomint.com/#business",
			"name": "Intelcom - Consultoría Microsoft Azure & Office 365",
			"image": "https://intelcomint.com/images/og-image.jpg",
			"url": "https://intelcomint.com",
			"telephone": "+506-2200-0000",
			"email": "info@intelcomint.com",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Centro Empresarial",
				"addressLocality": "Alajuela",
				"addressRegion": "Alajuela",
				"postalCode": "20101",
				"addressCountry": "CR"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": 10.0159,
				"longitude": -84.2156
			},
			"openingHoursSpecification": {
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
				"opens": "08:00",
				"closes": "17:00"
			},
			"priceRange": "$$",
			"aggregateRating": {
				"@type": "AggregateRating",
				"ratingValue": "4.8",
				"reviewCount": "50",
				"bestRating": "5",
				"worstRating": "1"
			},
			"hasOfferCatalog": {
				"@type": "OfferCatalog",
				"name": "Servicios de Consultoría Microsoft",
				"itemListElement": [
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Microsoft Azure Consultoría",
							"description": "Migración, implementación y gestión de infraestructura en Azure"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Office 365 Consultoría",
							"description": "Implementación y soporte de Productividad Microsoft 365"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Dynamics 365 Consultoría",
							"description": "Implementación de CRM y ERP con Dynamics 365"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Ciberseguridad",
							"description": "Servicios de seguridad y protección de datos"
						}
					}
				]
			}
		}
		</script>

		<!-- Schema.org Structured Data - WebSite -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"@id": "https://intelcomint.com/#website",
			"url": "https://intelcomint.com",
			"name": "Intelcom",
			"description": "Microsoft Solutions Partner certificado en Costa Rica. Especialistas en Azure, Office 365, Dynamics 365 y ciberseguridad.",
			"publisher": {
				"@id": "https://intelcomint.com/#organization"
			},
			"potentialAction": {
				"@type": "SearchAction",
				"target": {
					"@type": "EntryPoint",
					"urlTemplate": "https://intelcomint.com/search?q={search_term_string}"
				},
				"query-input": {
					"@type": "PropertyValueSpecification",
					"valueRequired": true,
					"valueName": "search_term_string"
				}
			}
		}
		</script>

		<!-- Schema.org Structured Data - BreadcrumbList -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Inicio",
					"item": "https://intelcomint.com"
				}
			]
		}
		</script>
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		
		<!-- Performance Optimizations -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
