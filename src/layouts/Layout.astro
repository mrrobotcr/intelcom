---
import Header from '../components/Header.astro';
import '../styles/global.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>Intelcom - Consultoría Microsoft Azure & Office 365 en Costa Rica</title>
		<meta name="title" content="Intelcom - Consultoría Microsoft Azure & Office 365 en Costa Rica" />
		<meta name="description" content="Somos Microsoft Solutions Partner certificado en Costa Rica. Especialistas en migración Azure, Office 365, Dynamics 365, ciberseguridad e infraestructura en la nube. Consultoría especializada disponible." />
		<meta name="keywords" content="Microsoft Azure Costa Rica, Office 365 Costa Rica, Dynamics 365, consultoría Microsoft, migración nube, ciberseguridad, infraestructura cloud, Microsoft Solutions Partner" />
		<meta name="author" content="Intelcom" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://intelcomint.com" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://intelcomint.com" />
		<meta property="og:title" content="Intelcom - Consultoría Microsoft Azure & Office 365 en Costa Rica" />
		<meta property="og:description" content="Microsoft Solutions Partner certificado en Costa Rica. Especialistas en Azure, Office 365, Dynamics 365 y ciberseguridad. Consultoría especializada disponible." />
		<meta property="og:image" content="https://intelcomint.com/images/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Intelcom" />
		<meta property="og:locale" content="es_CR" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://intelcomint.com" />
		<meta property="twitter:title" content="Intelcom - Consultoría Microsoft Azure & Office 365 en Costa Rica" />
		<meta property="twitter:description" content="Microsoft Solutions Partner certificado en Costa Rica. Especialistas en Azure, Office 365, Dynamics 365 y ciberseguridad. Consultoría especializada disponible." />
		<meta property="twitter:image" content="https://intelcomint.com/images/twitter-image.jpg" />
		
		<!-- Schema.org Structured Data -->
		<script type="application/ld+json" is:inline>
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Intelcom",
			"url": "https://intelcomint.com",
			"logo": "https://intelcomint.com/images/logo.png",
			"description": "Microsoft Solutions Partner certificado en Costa Rica, especialistas en Azure, Office 365, Dynamics 365 y ciberseguridad.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Centro Empresarial",
				"addressLocality": "San José",
				"addressCountry": "CR"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+506-2200-0000",
				"contactType": "customer service",
				"email": "info@intelcomint.com",
				"availableLanguage": "Spanish"
			},
			"sameAs": [
				"https://www.linkedin.com/company/intelcom",
				"https://twitter.com/intelcom"
			],
			"areaServed": "Costa Rica",
			"serviceType": "IT Consulting",
			"expertise": ["Microsoft Azure", "Office 365", "Dynamics 365", "Cloud Migration", "Cybersecurity"]
		}
		</script>
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		
		<!-- Performance Optimizations -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
