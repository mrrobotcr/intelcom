<header class="bg-gradient-to-r from-black via-gray-900 to-primary-black text-neutral-white shadow-2xl backdrop-blur-md border-b border-white/20 fixed top-0 left-0 w-full z-50">
  <div class="container mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-gradient-to-br from-white to-primary-silver rounded-lg flex items-center justify-center shadow-lg">
          <span class="text-primary-black font-bold text-xl">I</span>
        </div>
        <div>
          <a href="/" class="text-2xl font-display font-bold bg-gradient-to-r from-white to-primary-silver bg-clip-text text-transparent hover:scale-105 transition-transform duration-300">
            Intelcom
          </a>
          <p class="text-xs text-gray-300 font-medium">Tecnolog√≠a en la Nube</p>
        </div>
      </div>
      
      <nav class="hidden lg:flex items-center space-x-8">
        <a href="#productos" class="text-neutral-white hover:text-primary-silver transition-colors duration-300 font-medium relative group">
          Productos
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-primary-silver group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#services" class="text-neutral-white hover:text-primary-silver transition-colors duration-300 font-medium relative group">
          Servicios
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-primary-silver group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="/ciberseguridad" class="text-neutral-white hover:text-primary-silver transition-colors duration-300 font-medium relative group">
          Ciberseguridad
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-primary-silver group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#partners" class="text-neutral-white hover:text-primary-silver transition-colors duration-300 font-medium relative group">
          Partners
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-primary-silver group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#about-us" class="text-neutral-white hover:text-primary-silver transition-colors duration-300 font-medium relative group">
          Nosotros
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-white to-primary-silver group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#contacto" class="bg-gradient-to-r from-white to-gray-100 hover:from-primary-silver hover:to-accent-silver-light text-primary-black px-6 py-2 rounded-full font-semibold transition-all duration-300 hover:shadow-lg hover:scale-105 shadow-md">
          Contacto
        </a>
      </nav>
      
      <div class="lg:hidden">
        <button id="menu-btn" class="text-neutral-white hover:text-primary-silver focus:outline-none transition-colors duration-300">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t border-white/20">
      <div class="flex flex-col space-y-3 pt-4">
        <a href="#productos" class="text-neutral-white hover:text-primary-silver py-2 px-4 rounded-lg hover:bg-white/10 transition-all duration-300">Productos</a>
        <a href="#services" class="text-neutral-white hover:text-primary-silver py-2 px-4 rounded-lg hover:bg-white/10 transition-all duration-300">Servicios</a>
        <a href="/ciberseguridad" class="text-neutral-white hover:text-primary-silver py-2 px-4 rounded-lg hover:bg-white/10 transition-all duration-300">Ciberseguridad</a>
        <a href="#partners" class="text-neutral-white hover:text-primary-silver py-2 px-4 rounded-lg hover:bg-white/10 transition-all duration-300">Partners</a>
        <a href="#about-us" class="text-neutral-white hover:text-primary-silver py-2 px-4 rounded-lg hover:bg-white/10 transition-all duration-300">Nosotros</a>
        <a href="#contacto" class="bg-gradient-to-r from-white to-gray-100 text-primary-black py-3 px-4 rounded-lg font-semibold text-center hover:from-primary-silver hover:to-accent-silver-light transition-all duration-300 shadow-md">Contacto</a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>